<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pck="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" 
             xmlns:swipswipe="clr-namespace:SwipSwipe" x:DataType="swipswipe:OpenUserCard"
             x:Class="SwipSwipe.OpenUserCard">
    <ContentView.Content>
        <pck:PancakeView CornerRadius="15" MinimumWidthRequest="88" MinimumHeightRequest="83" Background="Black">
                <pck:PancakeView.GestureRecognizers>
                    <ClickGestureRecognizer Command="{Binding ViewCard}" />
                    <TapGestureRecognizer Command="{Binding ViewCard}" />
                </pck:PancakeView.GestureRecognizers>
            </pck:PancakeView>
    </ContentView.Content>
</ContentView>